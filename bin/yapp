#!/usr/bin/env python
# -*- coding: utf-8 -*-
import sys
from yapp import family_phaser, recombination

def main(args):
    if len(args)<2:
        print("usage: yapp <command> <arg1, arg2 ..., argn>")
        sys.exit(1)
    if args[1] == 'phase':
        family_phaser.main(args[2:])
    elif args[1] == 'recomb':
        recombination.main(args[2:])
    
if __name__=='__main__':
    main(sys.argv)
